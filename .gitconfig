[user]
  name = soyalumno
  email = soy_alumno@yahoo.co.jp
[alias]
  # いい感じのグラフでログを表示
  l = log --graph --date=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
  la = log --graph --oneline --decorate --branches --tags --remotes --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
  st = status
  sw = switch
  co = checkout
  cm = commit
  # Untracked filesを表示せず，not stagedと，stagedだけの状態を出力する
  stt = status -uno
  # 行ごとの差分じゃなくて，単語レベルでの差分を色付きで表示する
  difff = diff --word-diff
  br = branch -a -vv
  alias = !git config --get-regexp alias | sed 's/^alias.//g' | sed 's/ / = /1'
[init]
  defaultBranch = main
[fetch]
  prune = true
[grep]
  linenumber = true
